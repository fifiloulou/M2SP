{% extends "base.html.twig" %}

{% block title %}création d'un article{% endblock %}

{% block body %}
    <div class="container my-5">
        <div class="row justify-content-md-center">
            <div class="col-md-6">
                <h1>Créer un nouvel article</h1>

                {{ form_start(form) }}

                {{ form_widget(form) }}

                <button type="submit" class="btn btn-outline-primary mt-3">Créer le nouvel article</button>

                <a href="{{ path ('articles_index') }}" class="btn btn-outline-success mt-3">Annuler</a>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
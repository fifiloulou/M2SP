{% extends 'base.html.twig' %}

{% block title %}Recettes{% endblock %}

{% block body %}
    <!-- recettes -->
        <section class="py-5">
            <div class="container px-5 my-5">
                <div class="row gx-5 justify-content-center">
                    <div class="col-lg-8 col-xl-6">
                        <div class="text-center">
                            <h2 class="fw-bolder">Liste des recettes</h2>
                            <p class="lead fw-normal text-muted mb-5">Retrouvez ici toutes les recettes.</p>
                        </div>
                    </div>
                </div>
                <div class="row gx-5">
                    {% for recette in recettes %} 
                        {% include "partials/cardRecette.html.twig" %}
                    {% endfor %}
                </div>
            </div>
            {# display navigation #}
            <div class="d-flex justify-content-center">
                {% do recettes.setPageRange(2) %}
                {{ knp_pagination_render(recettes, 'partials/pagination.html.twig') }}
            </div>
            <a class="bg-light" id="mutebacktotop" href="#"><i class="fas fa-arrow-up fa-3x" id="backtotop"></i></a>
        </section>
{% endblock %}

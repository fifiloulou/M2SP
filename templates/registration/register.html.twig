<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>MDSP - {% block title %}Inscription{% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="./css/register.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
    </head>
    <body>
        {% block body %}
        <div class="container">
            <div class="row">
                <div class="col-lg-10 col-xl-9 mx-auto">
                    <div class="card card-signin flex-row my-5">
                                        <img class="card-img-left d-none d-md-flex" src="{{asset ('mdmregister.jpg')}}" alt="image_de_connexion" />

                 
                        <div class="card-body">
                            {% for flashError in app.flashes('verify_email_error') %}
                                <div class="alert alert-danger" role="alert">{{ flashError }}</div>
                            {% endfor %}
                            {% if app.user %}
                                <div class="mb-3">
                                    Vous êtes connecté en tant que
                                    {{ app.user.username }},
                                    <a href="{{ path('app_logout') }}">Déconnexion</a>
                                </div>
                            {% else %}
                            <h5 class="card-title text-center">Inscription</h5>
                            {{ form_start(registrationForm) }}
                            {{ form_widget(registrationForm) }}
                            <button type="submit" class="btn btn-outline-primary mt-3">Confirmez l'inscription</button>
                            {{ form_end(registrationForm) }}
                            {% endif %}
                            <div class="container text-center my-5 pb-5">
                                <a href="{{ path ('app')}}" class="btn btn-outline-success center">Retour à l'accueil</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% endblock %}
    </body>
</html>
